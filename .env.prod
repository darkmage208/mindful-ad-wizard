# Production Environment Variables
# IMPORTANT: Fill in all the values before deploying to production

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here

# JWT Configuration (generate strong random keys)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_minimum_32_characters

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# ===== META/FACEBOOK ADS API CONFIGURATION =====
# Required for Meta Ads integration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-long-lived-access-token
META_AD_ACCOUNT_ID=act_your-ad-account-id
META_PAGE_ID=your-facebook-page-id
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ===== GOOGLE ADS API CONFIGURATION =====
# Required for Google Ads integration
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CUSTOMER_ID=123-456-7890
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token

# OAuth 2.0 URLs for Google Ads API
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-manager-account-id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@autonomiapro.com.br
FROM_NAME=Autonomia Pro

# Domain Configuration
DOMAIN=autonomiapro.com.br

# Application URLs
CLIENT_URL=https://autonomiapro.com.br
VITE_API_URL=https://autonomiapro.com.br/api

# Optional: Database and Service Ports (usually not needed to change)
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# BACKEND_PORT=5000
# FRONTEND_PORT=3000